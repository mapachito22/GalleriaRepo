<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Gallería</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <AuthorizeView>
            <Authorized>
                @* Esta etiqueta indica lo siguiente: Si esta logeado muestra, si no, oculta *@
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="i-home" aria-hidden="true"></span> Home
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="Plaqueo" Match="NavLinkMatch.All">
                        <span class="i-vcard" aria-hidden="true"></span> Plaqueo
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="GallosList">
                        <span class="i-duckduckgo" aria-hidden="true"></span> Gallos
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="TipoGalloList">
                        <span class="i-sitemap" aria-hidden="true"></span> Tipo Gallo
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="PrefijoList">
                        <span class="i-sort-alphabet-outline" aria-hidden="true"></span> Prefijos
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="perfilDetails">
                        <span class="i-sort-alphabet-outline" aria-hidden="true"></span> Perfil
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Admin">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="UsuariosList">
                    <span class="i-logout" aria-hidden="true"></span> Usuarios
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/identity/account/Logout">
                        <span class="i-logout" aria-hidden="true"></span> Salir
                    </NavLink>
                </li>

            </Authorized>
            
            <NotAuthorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/identity/account/login">
                        <span class="i-login" aria-hidden="true"></span> Ingresar
                    </NavLink>
                </li>
            </NotAuthorized>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    string user = "";
    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
